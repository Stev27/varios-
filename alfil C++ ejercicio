int _tmain(int argc, _TCHAR* argv[])
{
char n=78 ;
int p,f,c;
int f2,c2;
cout<<"digite la fila:";
cin>>f;
cout<<"digite la columna:";
cin>>c;
f=f-1;
c=c-1;
f2=f;
c2=c;

while ((c>0)&&(f>0))
{
c=c-1;
f=f-1;
}

while ((c2<7)&&(f2>0))
{
c2=c2+1;
f2=f2-1;
}
cout<<endl;
cout<<endl;

  for (int x=0; x<=7; x++)
  {    for (int y=0; y<=7; y++)
       {
if ( ((x==f)&&(y==c)) || ((x==f2)&&(y==c2)) )
{
                cout<<"*  ";
if ((x==f)&&(y==c))
{
c++;
f++;
}
if( (x==f2)&&(y==c2))
{
c2--;
f2++;
}
}
else
{
p = b_o_n (x,y);
if (p==1)
cout<<"N  ";
else
cout<<"B  ";
}
}
cout<<endl;
cout<<endl;
}
cin>>f;
}
int b_o_n (int x,int y)
{
int a;
int b;
a= x%2;
b= y%2;
if (a==b)
{
return 1;
}
else return 2;
}

